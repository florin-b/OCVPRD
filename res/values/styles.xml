<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:windowFullscreen">false</item>

        <item name="searchViewStyle">@style/CustomSearchViewStyle</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primaryColor</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/background_light</item>
    </style>

 <!-- Petru to see title dialog-->
    
    <style name="TransferObiectiveDialog2" parent="@android:style/Theme.Holo.Light.Dialog">
    <item name="android:windowNoTitle">false</item>
	</style>

  <!--End  Petru-->    
    
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
    </style>

    <declare-styleable name="DrawInsetsFrameLayout">
        <attr name="insetBackground" format="reference|color" />
    </declare-styleable>

</resources>
